---
interface Props {
    h1: string
    p: string
    btn: string
}

const {h1, p, btn} = Astro.props
---


<div class="bg-zinc-800 rounded-md m-1 p-4 flex flex-col items-start gap-4">
    <div class="space-y-1">
        <h1 class="font-bold">{h1}</h1>
        <p class="text-sm ">{p}</p>
    </div>
    <button class="py-2 px-3 bg-zinc-100 rounded-full text-black font-bold text-sm hover:scale-105">{btn}</button>
</div>