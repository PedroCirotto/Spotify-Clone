---
import { Image } from 'astro:assets'

interface Props {
    image: string
    name: string
}

const {image, name} = Astro.props
---

<div class="mt-4 ">
    <div class="hover:bg-zinc-800 space-y-2 py-2 px-3">
        <div class=" w-full">
            <!-- <Image src={image} alt='Artist image' width={100} height={100} /> -->
            <img class="rounded-full" src={image} alt="">
        </div>
        <h1>{name}</h1>
        <p class="font-semibold text-xs text-zinc-400">Artist</p>
    </div>
</div>